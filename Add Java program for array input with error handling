import java.util.Scanner;

public class practise {
    public static void main(String[] args) {
        Scanner input = new Scanner(System.in);
        while(true){
            
            try{
    
                int[] arr = new int[10];
                System.out.println("Enter array values: ");
        
                for (int i = 0; i<arr.length ;  i++){
                    arr[i]  =  input.nextInt();
                }
                System.out.print("Array value at index 3 is: "+arr[4]);
                break;
                
            }catch(Exception e){
                System.out.print("You entered invalid input.Please enter integer values\n");
                input.nextLine();
            }
        }
        input.close();
    }
}
